datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int      @id @default(autoincrement()) @map("_id")
  name     String
  username String    @unique
  password String    // Include the password field
  image    String?
  bookings Booking[]
}

model Host {
  id       Int        @id @default(autoincrement()) @map("_id")
  name     String
  listings Property[]
}

model Property {
  id            Int       @id @default(autoincrement()) @map("_id")
  name          String
  description   String
  pricePerNight Int
  amenities     Amenity[]
  bookings      Booking[]
  reviews       Review[]
  Host          Host?     @relation(fields: [hostId], references: [id])
  hostId        Int?

  @@index([hostId])
}

model Amenity {
  id         Int        @id @default(autoincrement()) @map("_id")
  name       String
  properties Property[]
}

model Booking {
  id           Int      @id @default(autoincrement()) @map("_id")
  checkInDate  DateTime
  checkOutDate DateTime
  property     Property @relation(fields: [propertyId], references: [id])
  propertyId   Int
  user         User     @relation(fields: [userId], references: [id])
  userId       Int

  @@index([propertyId])
  @@index([userId])
}

model Review {
  id         Int      @id @default(autoincrement()) @map("_id")
  content    String
  rating     Int
  property   Property @relation(fields: [propertyId], references: [id])
  propertyId Int

  @@index([propertyId])
}
